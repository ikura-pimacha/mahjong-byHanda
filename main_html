<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Textbox Display</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        #output {
            margin-top: 10px;
            font-weight: bold;
            color: #333;
        }
    </style>
</head>
<body>
    <h1>Textbox Display</h1>
    <input type="text" id="textbox" placeholder="Enter some text here">
    <button onclick="displayText()">Display</button>
    <div id="output"></div>

    <script>
        function displayText() {
            // Get the value from the textbox
            const inputText = document.getElementById('textbox').value;

            // Display the value in the output div
            const outputDiv = document.getElementById('output');
            outputDiv.textContent = inputText;
        }
    </script>
</body>
</html>
